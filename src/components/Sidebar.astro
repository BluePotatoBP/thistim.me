---
import { Icon } from 'astro-icon';
---

<script>
	const sidebar = document.querySelector('.sidebar');
	const nav = document.querySelector('nav');

	// get active link
	const navLinks = nav.querySelectorAll('a');
	const currentURL = window.location.href;
	navLinks.forEach((link) => {
		if (link.href === currentURL) {
			link.classList.add('active');
		}
	});

	// toggle sidebar on mobile
	const mobileNavToggle = document.querySelector('.mobile-nav-toggle');
	const svgPath = mobileNavToggle.querySelector('path');
	
	mobileNavToggle.addEventListener('click', () => {
		sidebar.classList.toggle('mobile-nav-active');
		
		// change icon
		if (sidebar.classList.contains('mobile-nav-active')) {
			svgPath.setAttribute('d', 'm16.192 6.344-4.243 4.242-4.242-4.242-1.414 1.414L10.535 12l-4.242 4.242 1.414 1.414 4.242-4.242 4.243 4.242 1.414-1.414L13.364 12l4.242-4.242z');
		} else {
			svgPath.setAttribute('d', 'M4 6h16v2H4zm0 5h16v2H4zm0 5h16v2H4z');
		}
	});
</script>

<div class="mobile-nav-toggle">
	<Icon pack="bx" name="bx-menu" width="1.5rem" />
</div>

<div class="sidebar">
	<nav>
		<ul>
			<li><a href="/"><Icon pack="bx" name="bx-home" width="1.5rem" />Home</a></li>
			<li><a href="/projects"><Icon pack="bx" name="bx-code-block" width="1.5rem" />Projects</a></li>
			<li><a href="/contact"><Icon pack="bx" name="bx-envelope" width="1.5rem" />Contact</a></li>
		</ul>
		<ul>
			<li><a href="/settings"><Icon pack="bx" name="bx-cog" width="1.5rem" />Settings</a></li>
		</ul>
	</nav>
</div>

<style>
	.sidebar {
		position: fixed;
		min-width: var(--sidebar-width);
		background: var(--slate-600);
		transition: left ease-in-out 0.5s;
		height: 100%;
		z-index: 100;
		left: 0;
	}

	nav {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		min-width: 100%;
		height: 100%;
	}

	.sidebar ul {
		list-style: none;
		padding: 1.3rem 0 1.3rem 0;
	}

	.sidebar svg {
		margin-right: 0.6rem;
	}

	.sidebar a {
		display: flex;
		align-items: center;
		padding: 0.7rem 15px;
		font-size: 15px;
		color: var(--slate-100);
	}

	.sidebar a:hover,
	.sidebar a:focus {
		color: #fff;
		text-decoration: none;
	}

	.sidebar .active {
		color: #fff;
		border-left: 2px solid var(--cyan-500);
	}

	@media (max-width: 1199px) {
		.sidebar,
		nav {
			left: calc(var(--sidebar-width) * -1);
		}
	}

	.mobile-nav-toggle {
		position: fixed;
		right: 15px;
		top: 15px;
		border-radius: 50px;
		cursor: pointer;
		z-index: 101;
		color: var(--slate-100);
	}

	.mobile-nav-toggle:hover {
		color: #fff;
	}

	.mobile-nav-active,
	.mobile-nav-active nav {
		left: 0;
	}

	@media (min-width: 1200px) {
		.mobile-nav-toggle {
			display: none;
		}
	}
</style>
