---
import { Icon } from 'astro-icon';
---

<script>
	const nav = document.querySelector('.navbar');
	const navLinks = nav.querySelectorAll('a');
	const currentURL = window.location.href;
	navLinks.forEach((link) => {
		if (link.href === currentURL) {
			link.classList.add('active');
		}
	});
</script>

<header>
	<nav class="navbar">
		<ul class="top">
			<li><a href="/"><Icon pack="bx" width="1.5rem" name="bx-home" />Home</a></li>
			<li><a href="javascript:void(0)"><Icon pack="bx" width="1.5rem" name="bx-code-block" />Projects</a></li>
			<li><a href="javascript:void(0)"><Icon pack="bx" width="1.5rem" name="bx-envelope" />Contact</a></li>
		</ul>
		<ul class="bottom">
			<li><a href="javascript:void(0)"><Icon pack="bx" width="1.5rem" name="bx-cog" />Settings</a></li>
		</ul>
	</nav>
</header>

<style>
	nav .top,
	nav .bottom {
		background: var(--background-darker);
		width: 150px;
		transition: all ease-in-out 0.5s;
	}

	nav .top {
		position: fixed;
		top: 0;
		left: 0;
		bottom: 0;
		padding: 30px 0 0 10px;
	}

	nav .bottom {
		position: fixed;
		left: 0;
		bottom: 0;
		padding: 0 0 30px 10px;
	}

	nav * {
		margin: 0;
		padding: 0;
		list-style: none;
	}

	nav svg {
		margin-right: 0.3rem;
	}

	/* inactive header items */
	nav a,
	nav a:focus {
		display: flex;
		align-items: center;
		color: #a8a9b4; /* TODO: make var */
		padding: 0.7rem 15px;
		transition: 0.3s;
		font-size: 15px;
	}

	/* active header item */
	nav a:hover,
	nav .active,
	nav .active:focus,
	nav li:hover > a {
		text-decoration: none;
		color: #fff;
	}

	@media (max-width: 1199px) {
		nav,
		nav .top,
		nav .bottom {
			left: -300px;
		}
	}

	/* Mobile Navigation */
	.mobile-nav-toggle {
		position: fixed;
		right: 15px;
		top: 15px;
		z-index: 9998;
		border: 0;
		font-size: 24px;
		transition: all 0.4s;
		outline: none !important;
		background-color: #149ddd;
		color: #fff;
		width: 40px;
		height: 40px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		line-height: 0;
		border-radius: 50px;
		cursor: pointer;
	}

	.mobile-nav-active {
		overflow: hidden;
	}

	.mobile-nav-active header {
		left: 0;
	}
</style>
