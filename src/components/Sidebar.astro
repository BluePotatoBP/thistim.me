---
import { Icon } from 'astro-icon';
---

<script>
	const nav = document.querySelector('.navbar');
	const navLinks = nav.querySelectorAll('a');
	const currentURL = window.location.href;
	navLinks.forEach((link) => {
		if (link.href === currentURL) {
			link.classList.add('active');
		}
	});
</script>

<nav class="navbar">
	<ul class="top">
		<li><a href="/"><Icon pack="bx" width="1.5rem" name="bx-home" />Home</a></li>
		<li><a href="javascript:void(0)"><Icon pack="bx" width="1.5rem" name="bx-code-block" />Projects</a></li>
		<li><a href="javascript:void(0)"><Icon pack="bx" width="1.5rem" name="bx-envelope" />Contact</a></li>
	</ul>
	<ul class="bottom">
		<li><a href="javascript:void(0)"><Icon pack="bx" width="1.5rem" name="bx-cog" />Settings</a></li>
	</ul>
</nav>

<style>
	nav {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		background: var(--background-darker);
		min-width: 9.3rem;
		transition: all ease-in-out 0.5s;
		position: sticky; /* TODO: make this work */
	}

	nav ul {
		list-style: none;
		padding: 1.3rem 0 1.3rem 0;
	}

	nav svg {
		margin-right: 0.3rem;
	}

	/* inactive header items */
	nav a,
	nav a:focus {
		display: flex;
		align-items: center;
		color: #a8a9b4; /* TODO: make var */
		padding: 0.7rem 15px;
		transition: 0.3s;
		font-size: 15px;
	}

	/* active header item */
	nav a:hover,
	nav .active,
	nav .active:focus,
	nav li:hover > a {
		text-decoration: none;
		color: #fff;
	}

	@media (max-width: 1199px) {
		nav {
			transform: translateX(-300px);
			min-width: 0;
			width: 0;
		}
	}
</style>
