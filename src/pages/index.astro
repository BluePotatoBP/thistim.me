---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.astro';
---

<Layout title="Hi, I'm Tim">
	<Sidebar />
	<main>
		<section id="hero" class="hero">
			<div class="center">
				<h1>Hi, I'm <span class="text-gradient">Tim</span></h1>
				<p>I like <span class="typed text-gradient" data-typed-items="coding, gaming, movies, music"></span></p>
			</div>
		</section>

		<section>
			<h2>Who am I?</h2>
			<p>
				This is an example link: <a href="https://www.google.com">Google</a>
			</p>
		</section>
	</main>
</Layout>

<script>
	import { typeEffect } from '../lib/main.js';
	typeEffect();
</script>

<style>
	main {
		margin: auto;
		width: 800px;
		color: white;
		line-height: 1.6;
	}

	#hero {
		width: 100%;
		background-size: cover;
		margin-top: 4rem;
		margin-bottom: 4rem;
	}

	#hero h1 {
		margin: 0 0 10px 0;
		font-size: 64px;
		font-weight: 700;
		line-height: 56px;
		color: #fff;
	}

	#hero p {
		font-size: 26px;
	}

	.center {
		text-align: center;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
	}

	.text-gradient {
		background-image: var(--accent-primary-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
	}
</style>
