---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Settings">
	<main>
		<div class="title center">
			<h1>Settings</h1>
		</div>

		<div class="colors center">
			<h2>Colors</h2>
			<div class="grid-slate-container">
				<div class="grid-slate slate-50"></div>
				<div class="grid-slate slate-100"></div>
				<div class="grid-slate slate-200"></div>
				<div class="grid-slate slate-300"></div>
				<div class="grid-slate slate-400"></div>
				<div class="grid-slate slate-500"></div>
				<div class="grid-slate slate-600"></div>
				<div class="grid-slate slate-700"></div>
				<div class="grid-slate slate-800"></div>
				<div class="grid-slate slate-900"></div>
				<div class="grid-slate slate-950"></div>
			</div>
		</div>
	</main>
</Layout>

<style>
	.colors {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.grid-slate-container {
		display: grid;
		grid-auto-flow: column;
	}

	.grid-slate {
		width: 110px;
		height: 110px;
	}

	.slate-50 {
		background-color: var(--slate-50);
	}
	.slate-100 {
		background-color: var(--slate-100);
	}
	.slate-200 {
		background-color: var(--slate-200);
	}
	.slate-300 {
		background-color: var(--slate-300);
	}
	.slate-400 {
		background-color: var(--slate-400);
	}
	.slate-500 {
		background-color: var(--slate-500);
	}
	.slate-600 {
		background-color: var(--slate-600);
	}
	.slate-700 {
		background-color: var(--slate-700);
	}
	.slate-800 {
		background-color: var(--slate-800);
	}
	.slate-900 {
		background-color: var(--slate-900);
	}
	.slate-950 {
		background-color: var(--slate-950);
	}
</style>
