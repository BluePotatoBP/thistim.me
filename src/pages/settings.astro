---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Settings">
	<main>
		<div class="title center">
			<h1><span class="text-gradient">Settings</span></h1>
		</div>

		<div class="center">
			<h2>Coming Soon</h2>
			<p>In the meantime, enjoy the colors this site uses!</p>
			<br>

			<div class="grid">
				<div class="grid-item" style="background-color: var(--slate-5);">slate-5</div>
				<div class="grid-item" style="background-color: var(--slate-10);">slate-10</div>
				<div class="grid-item" style="background-color: var(--slate-17);">slate-17</div>
				<div class="grid-item" style="background-color: var(--slate-20);">slate-20</div>
				<div class="grid-item" style="background-color: var(--slate-30);">slate-30</div>
				<div class="grid-item" style="background-color: var(--slate-40);">slate-40</div>
				<div class="grid-item" style="background-color: var(--slate-50);">slate-50</div>
				<div class="grid-item" style="background-color: var(--slate-60);">slate-60</div>
				<div class="grid-item" style="background-color: var(--slate-70);">slate-70</div>
				<div class="grid-item" style="background-color: var(--slate-80);">slate-80</div>
				<div class="grid-item" style="background-color: var(--slate-90);">slate-90</div>
			</div>

			<br />

			<div class="grid">
				<div class="grid-item" style="background-color: var(--gray-10);">gray-10</div>
				<div class="grid-item" style="background-color: var(--gray-20);">gray-20</div>
				<div class="grid-item" style="background-color: var(--gray-30);">gray-30</div>
				<div class="grid-item" style="background-color: var(--gray-40);">gray-40</div>
				<div class="grid-item" style="background-color: var(--gray-50);">gray-50</div>
				<div class="grid-item" style="background-color: var(--gray-60);">gray-60</div>
				<div class="grid-item" style="background-color: var(--gray-70);">gray-70</div>
				<div class="grid-item" style="background-color: var(--gray-80);">gray-80</div>
				<div class="grid-item" style="background-color: var(--gray-90);">gray-90</div>
			</div>

			<br />

			<div class="grid">
				<div class="grid-item" style="background-color: var(--cyan-10);">cyan-10</div>
				<div class="grid-item" style="background-color: var(--cyan-20);">cyan-20</div>
				<div class="grid-item" style="background-color: var(--cyan-30);">cyan-30</div>
				<div class="grid-item" style="background-color: var(--cyan-40);">cyan-40</div>
				<div class="grid-item" style="background-color: var(--cyan-50);">cyan-50</div>
				<div class="grid-item" style="background-color: var(--cyan-60);">cyan-60</div>
				<div class="grid-item" style="background-color: var(--cyan-70);">cyan-70</div>
				<div class="grid-item" style="background-color: var(--cyan-80);">cyan-80</div>
				<div class="grid-item" style="background-color: var(--cyan-90);">cyan-90</div>
			</div>

			<br />

			<div class="grid">
				<div class="grid-item" style="background-color: var(--lavender-10);">lavender-10</div>
				<div class="grid-item" style="background-color: var(--lavender-20);">lavender-20</div>
				<div class="grid-item" style="background-color: var(--lavender-30);">lavender-30</div>
				<div class="grid-item" style="background-color: var(--lavender-40);">lavender-40</div>
				<div class="grid-item" style="background-color: var(--lavender-50);">lavender-50</div>
				<div class="grid-item" style="background-color: var(--lavender-60);">lavender-60</div>
				<div class="grid-item" style="background-color: var(--lavender-70);">lavender-70</div>
				<div class="grid-item" style="background-color: var(--lavender-80);">lavender-80</div>
				<div class="grid-item" style="background-color: var(--lavender-90);">lavender-90</div>
			</div>
		</div>
	</main>

	<style>
		.grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(110px, 0));

			justify-content: center;
		}

		.grid-item {
			width: 110px;
			height: 110px;
			display: flex;
			justify-content: center;
			align-items: center;
			font-weight: 700;
			color: transparent;
		}

		.grid-item:hover {
			color: black;
			-webkit-text-stroke-width: 0.5px;
			-webkit-text-stroke-color: white;
		}
	</style>
</Layout>
